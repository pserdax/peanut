<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.Peanut" parent="Theme.MaterialComponents.DayNight.NoActionBar">

        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/color_primary</item>
        <item name="colorPrimaryDark">@color/black</item>
        <item name="colorPrimaryVariant">@color/black_dinner</item>
        <item name="colorOnPrimary">@color/textColorSecondary</item>

        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/textColorSecondary</item>
        <item name="colorSecondaryVariant">@color/textColorSecondary</item>
        <item name="colorOnSecondary">@color/black_dinner</item>

        <!-- Font family -->
        <item name="fontFamily">@font/poppins_medium</item>

        <!-- Text size -->
        <item name="android:textSize">12sp</item>

        <!-- Status bar color. -->
<!--        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>-->

        <!-- Bottom sheet -->
        <item name="bottomSheetDialogTheme">@style/AppBottomSheetDialogTheme</item>
    </style>

    <style name="Theme.Peanut" parent="Base.Theme.Peanut" />

    <!-- Main Button. -->
    <style name="Buttons.MainAndDisabled" parent="Widget.MaterialComponents.Button">
        <item name="android:padding">12dp</item>
        <item name="cornerRadius">10dp</item>
        <item name="android:lines">1</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
        <item name="textAllCaps">false</item>
        <item name="strokeColor">@color/black</item>
        <item name="rippleColor">@color/white</item>
        <item name="android:textColor">@color/white</item>
        <item name="backgroundTint">@color/black</item>
        <item name="strokeWidth">1dp</item>
    </style>

    <!-- Bottom sheet customizations -->
    <style name="AppBottomSheetDialogTheme" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/AppModalStyle</item>
    </style>

    <style name="AppModalStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/bg_bottom_sheet</item>
    </style>
</resources>